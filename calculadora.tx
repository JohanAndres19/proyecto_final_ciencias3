Entity:
    
    'entity' name=ID '{'
        variable+=Variable
        scomandos*=SumarCommand
        rcomandos*=RestarCommand
        mcomandos*=MultiplicarCommand
        dcomandos*=DividirCommand
    '}'
;

Variable:
    name=ID ':' type=[Type]
;

SumarCommand:
    name=ID '()' '+'
;

RestarCommand:
    name=ID '()' '-'
;

MultiplicarCommand:
    name=ID '()' '*'
;

DividirCommand:
    name=ID '()' '/'
;

Type:
    SimpleType
;

SimpleType:
    'type' name=ID
;